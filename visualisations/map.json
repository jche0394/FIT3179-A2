{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Mobile Speed Camera Locations in Victoria",
  "width": "container",
  "height": 500,
  "projection": {
    "type": "conicEqualArea",
    "parallels": [-36, -38],
    "rotate": [-145, 0, 0]
  },
  "layer": [
    {
      "mark": {"type": "geoshape", "fill": "gainsboro", "stroke": "white"},
      "data": {
        "url": "./data/melbtop.json",
        "format": {"type": "topojson", "feature": "vic_localities"}
      },
      "encoding": {
        "tooltip": [
          {
            "field": "properties.LOC_NAME",
            "type": "nominal",
            "title": "Local Government Area"
          }
        ]
      }
    },
    {
      "mark": {"type": "circle", "color": "blue", "opacity": 0.7},
      "data": {
        "url": "./data/geodata.csv"
      },
      "transform": [
        {
          "filter": "datum.Latitude >= -38.5 && datum.Latitude <= -37.48 && datum.Longitude >= 144.1 && datum.Longitude <= 145.7"
        }
      ],
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {"value": 10},
        "tooltip": [
          {"field": "Road", "type": "nominal", "title": "Road"},
          {"field": "Suburb", "type": "nominal", "title": "Suburb"},
          {"field": "Address", "type": "nominal", "title": "Formatted Address"}
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": null},
    "axis": {"labelFont": "Oxygen", "titleFont": "Oxygen"},
    "legend": {"labelFont": "Oxygen", "titleFont": "Oxygen"},
    "header": {"labelFont": "Oxygen", "titleFont": "Oxygen"}
  }
}
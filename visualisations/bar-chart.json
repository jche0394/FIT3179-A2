{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "title": {
    "text":"Distribution of Reasons for Camera Placement",
    "font": "Open Sans",       
    "fontSize": 18,             
    "fontWeight": "bold",       
    "color": "#333"             
  },
  "data": {
    "values": [
      {"Reason Code": "A", "Count": 901, "Dataset": "Mobile Speed Camera", "Description": "Documented history of collisions or road trauma within the previous 3 years"},
      {"Reason Code": "B", "Count": 1222, "Dataset": "Mobile Speed Camera", "Description": "Validated complaints of drivers using portable devices illegally, or with the improper wearing of seatbelts."},
      {"Reason Code": "C", "Count": 2048, "Dataset": "Mobile Speed Camera", "Description": "Identified by Police as deemed necessary."},
      {"Reason Code": "D", "Count": 734, "Dataset": "Mobile Speed Camera", "Description": "The road environment and physical characteristic is likely to encourage a higher frequency of driver distraction or improper wearing of seatbelts behaviour"},
      {"Reason Code": "A", "Count": 236, "Dataset": "Phone Seatbelt Camera", "Description": "Documented history of collisions or road trauma within the previous 3 years"},
      {"Reason Code": "B", "Count": 10, "Dataset": "Phone Seatbelt Camera", "Description": "Validated complaints of drivers using portable devices illegally, or with the improper wearing of seatbelts."},
      {"Reason Code": "C", "Count": 68, "Dataset": "Phone Seatbelt Camera", "Description": "Identified by Police as deemed necessary."}

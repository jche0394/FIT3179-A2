  "mark": {
    "type": "bar",
    "cornerRadiusTopLeft": 5,
    "cornerRadiusTopRight": 5
  },
  "encoding": {
    "x": {
      "field": "Reason Code",
      "type": "nominal",
      "title": "Reason Code",
      "axis": {"labelAngle": 0}  
    },
    "y": {
      "field": "Count",
      "type": "quantitative",
      "title": "Total Count",
      "axis": {
        "labelExpr": "datum.value == 0 ? '0' : format(datum.value, ',')",
        "titleFontSize": 14
      }
    },
    "xOffset": {
      "field": "Dataset"
    },
    "color": {
      "field": "Dataset",
      "type": "nominal",
      "title": "Dataset",
      "scale": {"scheme": "category10"},
      "legend": {
        "orient": "bottom"
      }
    },
    "tooltip": [
      {"field": "Dataset", "type": "nominal", "title": "Dataset"},
      {"field": "Count", "type": "quantitative", "title": "Count"},
      {"field": "Description", "type": "nominal", "title": "Reason Description"}
